@using TestForOski.MyHelper;
@model TestForOski.Models.CheckBoxModel
<h2>@ViewBag.Title</h2>
@{
    string path = string.Empty;

}

<br />
<h3 style="color:maroon">Тесты для незарегестрированных пользователей</h3>
<a class=" btn btn-default" href="#myModalBox" data-toggle="modal">Краткое описание</a>
<br />
<br />
@using (Html.BeginForm("TestForAll", "Home"))
{
    @Html.CheckBoxFor(m => m.Status, false) <input type="submit" value="Согласие на прохождение теста" />
    <br />
    <br />
   
}
@{
    if (ViewBag.Status == true)
    {

        path = "/Home/PageQuest1";
    }
    else
    {
        path = "/Home/TestForAll";
    }

}
<br />

<a class=" btn btn-default" href="@path">Продолжить</a>

<!-- HTML-код модального окна -->
<div id="myModalBox" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Заголовок модального окна -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Краткое описание теста:</h4>
            </div>
            <!-- Основное содержимое модального окна -->
            <div class="modal-body">

                Данный тест проверяет ваше знакомство с литературой   <br />

            </div>

        </div>
    </div>
</div>

