@{
    ViewBag.Title = "Home Page";
}


<h1 style="color:maroon">Главная страница</h1>

<a class=" btn btn-default" href="#myModalBox" data-toggle="modal">Посмотреть свои баллы</a>
<!-- HTML-код модального окна -->
<div id="myModalBox" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Заголовок модального окна -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Ваши баллы за прохождения теста:</h4>
            </div>
            <!-- Основное содержимое модального окна -->
            <div class="modal-body">

                <h3>Ваши баллы: @ViewBag.Count</h3>  <br />

            </div>

        </div>
    </div>
</div>

