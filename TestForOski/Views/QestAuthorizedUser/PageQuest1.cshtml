@model TestForOski.Models.CheckBoxModel
<h2>Тест по математике </h2>

@{
    List<string> quest = new List<string>();
    foreach (var q in ViewBag.Questions)
    {
        if (q.IdCategory == 1)
        {
            // Собрали вопросы из конкретной категории
            quest.Add(q.Text);

        }
    }
}
<h2 style="color:maroon">Первый вопрос :</h2>

@for (int i = 0; i < quest.Count; i++)
{
    if (i == 0)
    {
        <h3>@quest[0]</h3>
    }

}
@using (Html.BeginForm("PageQuest1", "QestAuthorizedUser"))
{
    @Html.CheckBox("answer1", false) @Html.Label(" 8 ")
    <br />
    @Html.CheckBoxFor(m => m.Status, false) @Html.Label(" 4 ")
    <br />
    @Html.CheckBox("answer3", false) @Html.Label(" 9 ")
    <br />
    <input type="submit" value="Сохранить" />

}
<br />
<br />
<a class=" btn btn-default" href="~/QestAuthorizedUser/PageQuest2">Продолжить</a>
<h3>@ViewBag.Status</h3>