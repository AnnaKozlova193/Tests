@model TestForOski.Models.CheckBoxModel
<h2>Тест по литературе </h2>
@{
    List<string> quest = new List<string>();
    foreach (var q in ViewBag.Questions)
    {
        if (q.IdCategory == 3)
        {
            // Собрали вопросы из конкретной категории
            quest.Add(q.Text);

        }
    }
}
<h2 style="color:maroon">Первый вопрос :</h2>

@for (int i = 0; i < quest.Count; i++)
{
    if (i == 0)
    {
        <h3>@quest[0]</h3>
    }

}

@using (Html.BeginForm("PageQuest1", "Question"))
{
    @Html.CheckBox("answer1", false)@Html.Label("Две Дианы")
    <br />
    @Html.CheckBox("answer2", false)@Html.Label("Муму")
    <br />

    @Html.CheckBoxFor(m => m.Status, false) @Html.Label("Война и мир")
    <br />

    <input type="submit" value="Сохранить" />

}
<br />
<br />
<a class=" btn btn-default" href="~/Question/PageQuest2">Продолжить</a>
<br />
<br />
<h3>@ViewBag.Status</h3>


